@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @* Componente especialidad *@
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center orange">
                <i class="large material-icons white-text">star</i>
                <a asp-controller="Especialidad" asp-action="Crear" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Especialidades: </span>
                <p>
                    Aquí podrás dar de alta nuevas Especialidades, modificarlas y borrarlas. A la espera de ser asignadas a un médico
                </p>
            </div>
            <div class="card-action blue-grey darken-4">
                <a asp-controller="Especialidad" asp-action="Index">Ver m&aacute;s</a>
            </div>
        </div>
    </div>

    @* Componente Medico *@
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center green">
                <i class="large material-icons white-text">medication</i>
                <a asp-controller="Medico" asp-action="Create" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">M&eacute;dico: </span>
                <p>
                    Aqui podras dar de alta nuevos M&eacute;dicos, modificar sus datos y realacionarlos con su Especialidad.
                </p>
            </div>
            <div class="card-action blue-grey darken-4">
                <a asp-controller="Medico" asp-action="Index">Ver m&aacute;s</a>
            </div>
        </div>
    </div>

    @* Componente Paciente *@
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center blue">
                <i class="large material-icons white-text">face</i>
                <a asp-controller="Paciente" asp-action="Crear" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">Paciente: </span>
                <p>
                    Aqui podras dar de alta nuevos Pacientes, modificar sus datos o borrarlos de la base de datos.
                </p>
            </div>
            <div class="card-action blue-grey darken-4">
                <a asp-controller="Paciente" asp-action="Index">Ver m&aacute;s</a>
            </div>
        </div>
    </div>
</div>

