@model NETCore_CRUD.Models.Medico



<h4>Medico</h4>
<hr />
<div class="row">
    <div>
        <form class="col s12" asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre"/>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <input type="hidden" asp-for="IdMedico" />
                <div class="input-field col s6">
                    <label asp-for="Apellido"></label>
                    <input asp-for="Apellido"/>
                    <span asp-validation-for="Apellido"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">map</i>
                    <label asp-for="Direccion"></label>
                    <input asp-for="Direccion"/>
                    <span asp-validation-for="Direccion"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">phone</i>
                    <label asp-for="Telefono"></label>
                    <input asp-for="Telefono"/>
                    <span asp-validation-for="Telefono"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">mail</i>
                    <label asp-for="Email"></label>
                    <input asp-for="Email"/>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">calendar_month</i>
                    <label asp-for="HorarioAtencionDesde"></label>
                    <input asp-for="HorarioAtencionDesde" type="text" class="timepicker"/>
                    <span asp-validation-for="HorarioAtencionDesde"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">calendar_month</i>
                    <label asp-for="HorarioAtencionHasta"></label>
                    <input asp-for="HorarioAtencionHasta" type="text" class="timepicker"/>
                    <span asp-validation-for="HorarioAtencionHasta"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">star</i>
                    <select name="IdEspecialidad"asp-items="ViewBag.ListaEspecialidades"></select>
                </div>
            </div>
            <div class="row center">
                <div class="col s6 m6">
                      <button class="btn waves-effect waves-light" type="submit" name="action">Editar
                        <i class="material-icons right">send</i>
                    </button>
                    @* <input type="submit" value="Create"  class="waves-effect waves-light btn"/> *@
                </div>
                <div class="col s6 m6">
                    <a asp-action="Index" class="waves-effect waves-light btn grey darken-4"><i class="material-icons left">arrow_back_ios</i>Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>

